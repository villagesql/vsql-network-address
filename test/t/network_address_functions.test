########################################################################
#
# Test: network_address_functions
# Purpose: Comprehensive testing of network address utility functions
# User Type: Database User (using network address manipulation functions)
#
########################################################################

--replace_result $MYSQLTEST_VARDIR MYSQLTEST_VARDIR
--replace_result $MYSQL_TEST_DIR MYSQL_TEST_DIR

--disable_warnings
DROP TABLE IF EXISTS test_functions;
--enable_warnings

########################################################################
# Setup test table
########################################################################

CREATE TABLE test_functions (
    id INT PRIMARY KEY,
    inet_addr INET,
    cidr_addr CIDR,
    mac_addr MACADDR,
    description VARCHAR(100)
);

# Insert test data - IPv4
INSERT INTO test_functions (id, inet_addr, cidr_addr, mac_addr, description) VALUES
(1, inet_from_string('192.168.1.5/24'), cidr_from_string('192.168.1.0/24'), macaddr_from_string('08:00:2b:01:02:03'), 'Class C network'),
(2, inet_from_string('10.0.0.1/8'), cidr_from_string('10.0.0.0/8'), macaddr_from_string('12:34:56:78:9a:bc'), 'Class A network'),
(3, inet_from_string('172.16.1.100/16'), cidr_from_string('172.16.0.0/16'), macaddr_from_string('aa:bb:cc:dd:ee:ff'), 'Class B network'),
(4, inet_from_string('192.168.23.20/30'), cidr_from_string('192.168.23.20/30'), macaddr_from_string('00:00:00:00:00:00'), 'Small subnet'),
(5, inet_from_string('203.0.113.50/32'), cidr_from_string('203.0.113.50/32'), macaddr_from_string('ff:ff:ff:ff:ff:ff'), 'Single host');

