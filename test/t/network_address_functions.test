########################################################################
#
# Test 1: Simple Extractors
#
########################################################################

--echo # Test inet_family - extract address family
SELECT id, description, inet_family(inet_addr) AS family
FROM test_functions ORDER BY id;

--echo # Test inet_masklen - extract netmask length
SELECT id, description, inet_masklen(inet_addr) AS masklen
FROM test_functions ORDER BY id;

--echo # Test inet_host - extract IP address without netmask
SELECT id, description, inet_host(inet_addr) AS host
FROM test_functions ORDER BY id;

--echo # Test inet_text - extract IP address with netmask
SELECT id, description, inet_text(inet_addr) AS text
FROM test_functions ORDER BY id;

########################################################################
#
# Test 2: Mask Calculations
#
########################################################################

--echo # Test inet_netmask - construct netmask for network
SELECT id, description,
       inet_text(inet_addr) AS address,
       inet_to_string(inet_netmask(inet_addr)) AS netmask
FROM test_functions ORDER BY id;

--echo # Test inet_hostmask - construct host mask (inverse of netmask)
SELECT id, description,
       inet_text(inet_addr) AS address,
       inet_to_string(inet_hostmask(inet_addr)) AS hostmask
FROM test_functions ORDER BY id;

--echo # Test inet_broadcast - calculate broadcast address
SELECT id, description,
       inet_text(inet_addr) AS address,
       inet_to_string(inet_broadcast(inet_addr)) AS broadcast
FROM test_functions ORDER BY id;

--echo # Test inet_network - extract network address
SELECT id, description,
       inet_text(inet_addr) AS address,
       cidr_to_string(inet_network(inet_addr)) AS network
FROM test_functions ORDER BY id;


########################################################################
#
# Test 3: Formatting (Abbreviation)
#
########################################################################

--echo # Test inet_abbrev - omit /32 for single hosts
SELECT id, description,
       inet_text(inet_addr) AS full_format,
       inet_abbrev(inet_addr) AS abbreviated
FROM test_functions ORDER BY id;

--echo # Test cidr_abbrev - show minimal significant octets
SELECT id, description,
       cidr_to_string(cidr_addr) AS full_format,
       cidr_abbrev(cidr_addr) AS abbreviated
FROM test_functions ORDER BY id;

########################################################################
#
# Test 4: Combined Function Usage
#
########################################################################

--echo # Test all functions together on sample data
SELECT
       inet_family(inet_from_string('192.168.1.5/24')) AS family,
       inet_masklen(inet_from_string('192.168.1.5/24')) AS masklen,
       inet_host(inet_from_string('192.168.1.5/24')) AS host,
       inet_text(inet_from_string('192.168.1.5/24')) AS text,
       inet_to_string(inet_netmask(inet_from_string('192.168.1.5/24'))) AS netmask,
       inet_to_string(inet_hostmask(inet_from_string('192.168.1.5/24'))) AS hostmask,
       inet_to_string(inet_broadcast(inet_from_string('192.168.1.5/24'))) AS broadcast,
       cidr_to_string(inet_network(inet_from_string('192.168.1.5/24'))) AS network;

########################################################################
#
# Test 5: Edge Cases
#
########################################################################

--echo # Test edge cases - /0 and /32
SELECT
    inet_to_string(inet_set_masklen(inet_from_string('192.168.1.5/24'), 0)) AS masklen_0,
    inet_to_string(inet_set_masklen(inet_from_string('192.168.1.5/24'), 32)) AS masklen_32;

--echo # Test abbreviation edge cases
SELECT
    cidr_abbrev(cidr_from_string('0.0.0.0/0')) AS slash_0,
    cidr_abbrev(cidr_from_string('10.0.0.0/8')) AS slash_8,
    cidr_abbrev(cidr_from_string('192.168.0.0/16')) AS slash_16;

########################################################################
#
# Test 6: Comparison helpers
#
########################################################################

--echo # inet_compare returns ordering semantics (-1, 0, 1)
SELECT
    inet_compare(inet_from_string('10.0.0.1'), inet_from_string('10.0.0.2')) AS inet_lt,
    inet_compare(inet_from_string('10.0.0.1'), inet_from_string('10.0.0.1')) AS inet_eq,
    inet_compare(inet_from_string('10.0.0.2'), inet_from_string('10.0.0.1')) AS inet_gt;

--echo # cidr_compare matches INET ordering rules
SELECT
    cidr_compare(cidr_from_string('10.0.0.0/8'), cidr_from_string('10.0.0.0/16')) AS cidr_lt,
    cidr_compare(cidr_from_string('10.0.0.0/8'), cidr_from_string('10.0.0.0/8')) AS cidr_eq,
    cidr_compare(cidr_from_string('10.0.0.0/16'), cidr_from_string('10.0.0.0/8')) AS cidr_gt;

--echo # macaddr_compare sorts lexicographically by bytes
SELECT
    macaddr_compare(macaddr_from_string('00:00:00:00:00:00'), macaddr_from_string('00:00:00:00:00:01')) AS mac_lt,
    macaddr_compare(macaddr_from_string('00:00:00:00:00:01'), macaddr_from_string('00:00:00:00:00:01')) AS mac_eq,
    macaddr_compare(macaddr_from_string('ff:ff:ff:ff:ff:ff'), macaddr_from_string('00:00:00:00:00:01')) AS mac_gt;

--echo # macaddr8_compare mirrors macaddr behavior for 8-byte addresses
SELECT
    macaddr8_compare(macaddr8_from_string('00:00:00:00:00:00:00:00'), macaddr8_from_string('00:00:00:00:00:00:00:01')) AS mac8_lt,
    macaddr8_compare(macaddr8_from_string('00:00:00:00:00:00:00:01'), macaddr8_from_string('00:00:00:00:00:00:00:01')) AS mac8_eq,
    macaddr8_compare(macaddr8_from_string('ff:ff:ff:ff:ff:ff:ff:ff'), macaddr8_from_string('00:00:00:00:00:00:00:01')) AS mac8_gt;

########################################################################
# Cleanup
########################################################################

DROP TABLE test_functions;

# Remove extension from registry
UNINSTALL EXTENSION vsql_network_address;
